{
  "name": "dr-json",
  "description": "Manage JSON files by using JSON Schemas",
  "homepage": "https://github.com/innogames/dr-json",
  "license": "MIT",
  "author": {
    "name": "Innogames GmbH"
  },
  "version": "0.10.0",
  "private": true,
  "main": "./dist/compiled/main.js",
  "build": {
    "productName": "Dr. Json",
    "appId": "de.innogames.foe.dr-json",
    "files": [
      "dist/compiled"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icons/mac/icon.icns",
      "target": "dmg"
    },
    "dmg": {
      "icon": "build/icons/mac/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/icons/win/icon.ico"
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "electron": "electron dist/compiled/main.js",
    "dev": "webpack --config-name main --mode=development --env.env=dev --env.devServerPort=3000 && concurrently \"webpack-dev-server --config-name renderer --mode=development --env.env=dev --env.devServerPort=3000\" \"wait-on http://localhost:3000 && yarn run electron\"",
    "compile": "webpack --mode=production",
    "create-icons": "electron-icon-maker --input=./build/icons/icon-src.png --output=./build/",
    "dist": "rimraf dist && yarn run compile && electron-builder -mw"
  },
  "dependencies": {
    "electron-settings": "3.1.4",
    "fs-extra": "4.0.2",
    "inversify": "^4.13.0",
    "mobx": "4.0.0",
    "mobx-react": "5.0.0",
    "query-string": "5.0.1",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-jsonschema-form": "1.0.3",
    "react-select": "1.1.0",
    "reflect-metadata": "^0.1.12",
    "source-map-support": "0.5.0"
  },
  "devDependencies": {
    "@types/electron-debug": "1.1.0",
    "@types/electron-settings": "3.1.1",
    "@types/fs-extra": "4.0.5",
    "@types/jest": "22.2.0",
    "@types/node": "8.0.31",
    "@types/query-string": "5.0.1",
    "@types/react-dom": "16.0.4",
    "@types/react-jsonschema-form": "1.0.4",
    "@types/react-select": "1.1.0",
    "concurrently": "3.5.1",
    "css-loader": "0.28.10",
    "dependency-rules-webpack-plugin": "^0.1.1",
    "electron": "1.8.4",
    "electron-builder": "20.4.1",
    "electron-icon-maker": "0.0.4",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "file-loader": "1.1.11",
    "html-webpack-plugin": "3.0.6",
    "jest": "22.4.2",
    "node-sass": "4.8.1",
    "rimraf": "2.6.2",
    "sass-loader": "6.0.7",
    "style-loader": "0.20.3",
    "ts-jest": "22.4.1",
    "ts-loader": "4.0.1",
    "typescript": "2.7.2",
    "url-loader": "^0.6.2",
    "wait-on": "2.1.0",
    "webpack": "4.1.1",
    "webpack-cli": "2.0.10",
    "webpack-dev-server": "3.1.1"
  },
  "electronWebpack": {
    "title": true
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)test)\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  }
}
